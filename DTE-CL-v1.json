              }
            },
            "then":{
              "properties":{
                "tributos":{
                  "type":"null"
                }
              }
            }
          },
          {
            "if":{
              "properties":{
                "tipoGeneracion":{
                  "const":1
                }
              }
            },
            "then":{
              "properties":{
                "numeroDocumento":{
                  "type":"string",
                  "pattern":"^[A-Z]|[0-9]$",
                  "minLength":1,
                  "maxLength":20
                }
              }
            },
            "else":{
              "properties":{
                "numeroDocumento":{
                  "pattern":"^[A-F0-9]{8}-[A-F0-9]{4}-[A-F0-9]{4}-[A-F0-9]{4}-[A-F0-9]{12}$"
                }
              }
            }
          }
