          "description":"Descripcion actividad economica",
          "maxLength":150,
          "minLength":5
        },
        "nombreComercial":{
          "description":"Nombre comercial del establecimiento",
          "type":[
            "string",
            "null"
          ],
          "maxLength":150,
          "minLength":5
        },
        "tipoEstablecimiento":{
          "type":"string",
          "description":"Tipo establecimiento donde se emite documento [CAT-009 TIPO DE ESTABLECIMIENTO]",
          "enum":[
            "01",
            "02",
            "04",
            "07",
            "20"
          ]
        },
        "direccion":{
          "type":"object",
          "description":"Direccion de establecimiento",
          "properties":{
            "departamento":{
              "type":"string",
              "description":"Departamento",
              "pattern":"^0[1-9]|1[0-4]$"
            },
            "municipio":{
              "type":"string",
              "description":"Municipio",
              "pattern":"^[0-9]{2}$"
            },
            "complemento":{
              "type":"string",
              "description":"Complemento de direccion",
              "maxLength":200,
              "minLength":1
            }
          },
          "allOf":[
            {
              "if":{
                "properties":{
                  "departamento":{
                    "const":"01"
                  }
                }
              },
              "then":{
                "properties":{
                  "municipio":{
                    "pattern":"^0[1-9]|1[0-2]$"
                  }
                }
              }
            },
            {
              "if":{
                "properties":{
                  "departamento":{
                    "enum":[
                      "02",
                      "10"
                    ]
                  }
                }
              },
              "then":{
