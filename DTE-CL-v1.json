        },
        "codPuntoVenta":{
          "description":"Codigo de Identificaci贸n del  Punto de Venta (Emisor) asignado por la contribuyente",
          "type":[
            "string",
            "null"
          ],
          "maxLength":15,
          "minLength":1
        }
      },
      "additionalProperties":false,
      "required":[
        "nit",
        "nrc",
        "nombre",
        "codActividad",
        "descActividad",
        "nombreComercial",
        "tipoEstablecimiento",
        "direccion",
        "telefono",
        "correo"
      ]
    },
